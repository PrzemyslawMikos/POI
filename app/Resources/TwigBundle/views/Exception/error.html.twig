{% extends 'dashboard.html.twig' %}

{% block content %}
    <div class="error-page">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>
                    <i class="fa fa-ban fa-fw"></i>
                    {% if status_code == 403 %}
                        Brak dostępu
                    {% elseif status_code == 404 %}
                        Nie znaleziono
                    {% else %}
                        Błąd serwera
                    {% endif %}
                </h2>
                <hr/>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h3>Kod błędu:{{ status_code }}</h3>
                <h3>Opis błędu:{{ status_text }}</h3>
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-lg-12">
                <h5>Proszę skontaktuj się z administratorem witryny <a href="mailto:przemekmikos@yahoo.pl">Przemysław Mikos</a></h5>
            </div>
        </div>
    </div>
{% endblock %}