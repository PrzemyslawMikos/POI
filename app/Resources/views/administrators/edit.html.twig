{% extends 'dashboard.html.twig' %}

{% block content %}
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header"><i class="fa fa-pencil fa-fw"></i> Admin Edit</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ form_start(edit_form) }}
                        <div class="form-group">
                            {{ form_label(edit_form.role, 'Role') }}
                            {{ form_widget(edit_form.role, {'attr' : {'class' : 'form-control input-sm', 'autofocus' : 'autofocus'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.firstname, 'First name') }}
                            {{ form_widget(edit_form.firstname, {'attr' : {'class' : 'form-control input-sm', 'autofocus' : 'autofocus'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.lastname, 'Last name') }}
                            {{ form_widget(edit_form.lastname, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.phone, 'Phone number') }}
                            {{ form_widget(edit_form.phone, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.email, 'E-mail') }}
                            {{ form_widget(edit_form.email, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                           <b>Username: {{ administrator.username }}</b>
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.firstlogin, 'Change password') }}
                            {{ form_widget(edit_form.firstlogin, {'attr' : {'class' : ''}}) }}
                        </div>
                        <div class="form-group multiple-forms-buttons">
                            <a href="{{ path('administrators_index', { 'page': 1 }) }}"><button type="button" class="btn btn-sm btn-default"><i class="fa fa-reply"></i> All</button></a>
                            <button class="btn btn-sm btn-primary btn-df multiple-center-button" type="submit"><i class="fa fa-check fa-fw"></i> Save</button>
                            {{ form_end(edit_form) }}

                            {{ form_start(delete_form)}}
                            <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-times fa-fw"></i> Delete </button>
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <i class="fa fa-info fa-fw"></i> How to fill in properly
                    </div>
                    <div class="panel-body">
                        <p>
                            Select 'Change password' option to force administrator to change password while next login.<br/>
                            All fields have to be filled in.
                        </p>
                    </div>
                </div>
            </div>
        </div>
