{% extends 'base.html.twig' %}

{% block body %}
    <h1>Changes</h1>

    <table>
        <tbody>
            <tr>
                <th>Date</th>
                <td>{% if change.date %}{{ change.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Actiontype</th>
                <td>{{ change.actiontype }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ change.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('changes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('changes_edit', { 'id': change.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
