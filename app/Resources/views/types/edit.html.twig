{% extends 'dashboard.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header"><i class="fa fa-pencil fa-fw"></i> Type Edit</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(edit_form) }}
                    <div class="form-group">
                        {{ form_label(edit_form.name, 'Type name') }}
                        {{ form_widget(edit_form.name, {'attr' : {'class' : 'form-control input-sm'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.description, 'Description') }}
                        {{ form_widget(edit_form.description, {'attr' : {'class' : 'form-control input-sm'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.image, 'Image') }}
                        <p class="alert alert-info">Old image will be replaced by new, only if set!</p>
                        <div class="row">
                            <div class="col-lg-12 margin-bot text-center">
                                <img class="image-max" src="{{ asset(types_directory ~ type.image) }}" />
                            </div>
                        </div>
                        {{ form_widget(edit_form.image, {'attr' : {'class' : 'filestyle', 'data-icon' : 'false', 'data-buttonBefore' : 'true'}}) }}
                    </div>
                    <div class="form-group multiple-forms-buttons">
                        <a href="{{ path('types_index', { 'page' : 1 }) }}"><button type="button" class="btn btn-sm btn-default"><i class="fa fa-reply"></i> All</button></a>
                        <button class="btn btn-sm btn-primary btn-df multiple-center-button" type="submit"><i class="fa fa-check fa-fw"></i> Save</button>
                        {{ form_end(edit_form)}}

                        {{ form_start(delete_form)}}
                            <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-times fa-fw"></i> Delete </button>
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-info fa-fw"></i> How to fill in properly
                </div>
                <div class="panel-body">
                    Some info...<br/>
                    Picture size: 300x200 px
                </div>
            </div>
        </div>
    </div>
{% endblock %}