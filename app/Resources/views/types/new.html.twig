{% extends 'dashboard.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header"><i class="fa fa-plus fa-fw"></i> Type Add</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.name, 'Type name') }}
                            {{ form_widget(form.name, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description, 'Description') }}
                            {{ form_widget(form.description, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.image, 'Image') }}
                            {{ form_widget(form.image, {'attr' : {'class' : 'filestyle', 'data-icon' : 'false', 'data-buttonBefore' : 'true'}}) }}
                        </div>
                        <div class="form-group">
                            <a href="{{ path('types_index', { 'id': type.id }) }}"><button type="button" class="btn btn-sm btn-default"><i class="fa fa-reply"></i> All</button></a>
                            <button class="btn btn-sm btn-primary btn-df" type="submit"><i class="fa fa-plus fa-fw"></i> Add</button>
                        </div>
                    {{ form_end(form)}}
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-info fa-fw"></i> How to fill in properly
                </div>
                <div class="panel-body">
                    Some info...<br/>
                    Picture size: 300x200 px
                </div>
            </div>
        </div>
    </div>
{% endblock %}