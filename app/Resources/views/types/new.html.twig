{% extends 'dashboard.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header"><i class="fa fa-plus fa-fw"></i> Dodaj kategorię</h2>
        </div>
    </div>
    {% include 'flash/flash.html.twig' %}
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.name, 'Nazwa kategorii') }}
                            {{ form_widget(form.name, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description, 'Opis') }}
                            {{ form_widget(form.description, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.image, 'Zdjęcie') }}
                            {{ form_widget(form.image, {'attr' : {'class' : 'filestyle', 'data-icon' : 'false', 'data-buttonBefore' : 'true'}}) }}
                        </div>
                        <div class="form-group">
                            <a href="{{ path('types_index', { 'id': type.id }) }}"><button type="button" class="btn btn-sm btn-default"><i class="fa fa-reply"></i> Wszystkie</button></a>
                            <button class="btn btn-sm btn-primary btn-df" type="submit"><i class="fa fa-plus fa-fw"></i> Dodaj</button>
                        </div>
                    {{ form_end(form)}}
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-info fa-fw"></i> Jak dodać prawidłowo...
                </div>
                <div class="panel-body">
                    Zdjęcie musi mieć proporcje 1 do 1<br>
                    Rekomendowany rozmiar to 400x400 pikseli
                </div>
            </div>
        </div>
    </div>
{% endblock %}