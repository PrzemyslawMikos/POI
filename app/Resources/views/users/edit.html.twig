{% extends 'dashboard.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header"><i class="fa fa-pencil fa-fw"></i> Edycja Użytkownika</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(edit_form) }}
                    <div class="form-group">
                        {{ form_label(edit_form.permission, 'Uprawnienia') }}
                        {{ form_widget(edit_form.permission, {'attr' : {'class' : 'form-control input-sm', 'autofocus' : 'autofocus'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.nickname, 'Nick') }}
                        {{ form_widget(edit_form.nickname, {'attr' : {'class' : 'form-control input-sm', 'autofocus' : 'autofocus'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.username, 'Nazwa użytkownika') }}
                        {{ form_widget(edit_form.username, {'attr' : {'class' : 'form-control input-sm'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.phone, 'Telefon') }}
                        {{ form_widget(edit_form.phone, {'attr' : {'class' : 'form-control input-sm'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.email, 'E-mail') }}
                        {{ form_widget(edit_form.email, {'attr' : {'class' : 'form-control input-sm'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.firstlogin, 'Pierwsze logowanie') }}
                        {{ form_widget(edit_form.firstlogin, {'attr' : {'class' : ''}}) }}
                    </div>
                    <div class="form-group multiple-forms-buttons">
                        <a href="{{ path('users_index', { 'page': 1 }) }}"><button type="button" class="btn btn-sm btn-default"><i class="fa fa-reply"></i> Wszystkie</button></a>
                        <button class="btn btn-sm btn-primary btn-df multiple-center-button" type="submit"><i class="fa fa-check fa-fw"></i> Zapisz</button>
                        {{ form_end(edit_form) }}
                        {{ form_start(delete_form)}}
                        <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-times fa-fw"></i> Usuń </button>
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <i class="fa fa-info fa-fw"></i> Jak edytować prawidłowo
                </div>
                <div class="panel-body">
                    <p>
                        Edytowanie danych użytkownika nie jest zalecane, powinno być wykonane jedynie za jego zgodą.
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}