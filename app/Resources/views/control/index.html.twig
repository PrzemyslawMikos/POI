{% extends 'dashboard.html.twig' %}

{% block content %}
    <h1>Control list</h1>

    <table>
        <thead>
            <tr>
                <th>Tonextversion</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for control in controls %}
            <tr>
                <td><a href="{{ path('control_show', { 'id': control.id }) }}">{{ control.tonextversion }}</a></td>
                <td>{{ control.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('control_show', { 'id': control.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('control_edit', { 'id': control.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
