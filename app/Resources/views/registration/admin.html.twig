{% extends 'dashboard.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header"><i class="fa fa-plus-circle fa-fw"></i> Dodaj administratora</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.role, 'Uprawnienia') }}
                            {{ form_widget(form.role, {'attr' : {'class' : 'form-control input-sm', 'autofocus' : 'autofocus'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.firstname, 'Imię') }}
                            {{ form_widget(form.firstname, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.lastname, 'Nazwisko') }}
                            {{ form_widget(form.lastname, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.phone, 'Telefon') }}
                            {{ form_widget(form.phone, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.email, 'E-mail') }}
                            {{ form_widget(form.email, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.username, 'Nazwa użytkownika') }}
                            {{ form_widget(form.username, {'attr' : {'class' : 'form-control input-sm'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.first, 'Hasło') }}
                            <div class="input-group inline-group">
                            {{ form_widget(form.plainPassword.first, {'attr' : {'class' : 'form-control input-sm', 'placeholder' : 'Hasło'}}) }}
                            {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'form-control input-sm', 'placeholder' : 'Powtórz hasło'}}) }}
                            </div>
                        </div>
                    <input type="submit" value="Dodaj" class="btn btn-sm btn-primary" />
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-info fa-fw"></i> Jak dodać prawidłowo
                </div>
                <div class="panel-body">
                    <p>
                        Po dodaniu nowy administrator będzie musiał zmienić swoje hasło.<br/>
                        Wszystkie pola muszą być wypełnione.
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}