{% extends 'base.html.twig' %}

{% block body %}
    <h1>Warnings list</h1>

    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Date</th>
                <th>Active</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for warning in warnings %}
            <tr>
                <td><a href="{{ path('warnings_show', { 'id': warning.id }) }}">{{ warning.description }}</a></td>
                <td>{% if warning.date %}{{ warning.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if warning.active %}Yes{% else %}No{% endif %}</td>
                <td>{{ warning.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('warnings_show', { 'id': warning.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('warnings_edit', { 'id': warning.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('warnings_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
